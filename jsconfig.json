{
    "compilerOption": {
        "jsx": "react-jsx",
        "checkJs": false,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client"]
    },
    "include": [
        "src/**/*.d.ts",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",

    ],
    "exclude": [
        "node_modules",
        "**/node_modules",
        "dist"
    ]
}